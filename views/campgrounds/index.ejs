<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1>Welcome to YelpCamp Campgrounds</h1>
    <p>View our hand-picked campgrounds from all over the world!</p>
    <p><a href="/campgrounds/new" id="newcampground"><button type="button" class="btn btn-primary btn-lg">Add New Campground</button></a></p>
  </div>

</header>

<main>
  <div class="row text-center">
    <% if(campgrounds){ %>
    <% campgrounds.forEach(function(campground){ %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <img src='/images/<%= campground.url %>' class="img-thumbnail">
        <div class="caption"><h4><%= campground.name %></h4></div>
        <form class="" action="/campgrounds/<%= campground._id %>" method="get">
          <input type="submit" class="btn btn-primary" value="More Info">
        </form>
      </div>
    <% });} %>
  </div>
</main>


<% include ../partials/footer %>
