<% include ../partials/header %>
<div class="row">
  <div class="col-lg-12">

    <h1 class="text-center">Update Campground Information</h1>

    <div class="mx-auto">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
            <div class="form-group">
              <label for="name">Update Name</label>
              <input type="text" class="form-control" name="campground[name]" id="name" aria-describedby="nameHelp" value="<%= campground.name %>">
              <small id="nameHelp" class="form-text text-muted">Update the campground name.</small>
            </div>

            <div class="form-group">
              <label for="desc">Update Description</label>
              <textarea rows="8" class="form-control" cols="100" id="desc" name="campground[desc]" aria-describedby="descHelp"><%= campground.desc %></textarea>
              <small id="descHelp" class="form-text text-muted">Update campground description.</small>
            </div>

            <div class="form-group">
              <label for="url">Update Image URL</label>
              <input type="text" class="form-control" name="campground[url]" id="url" aria-describedby="urlHelp" value="<%= campground.url %>">
              <small id="urlHelp" class="form-text text-muted">Update url for the campground image.</small>
            </div>

            <div class="form-group">
              <label for="price">Update Price</label>
              <input type="text" class="form-control" name="campground[price]" id="price" aria-describedby="priceHelp" value="<%= campground.price %>">
              <small id="priceHelp" class="form-text text-muted">Update price for the campground.</small>
            </div>

            <div class="text-center">
            <input type="submit" class="btn btn-primary btn-block" value="Submit">
            <input type="reset" class="btn btn-primary btn-block" value="Reset">
          </div>
        </form>
        <a href="/campgrounds" class="text-center">Go Back</a>
    </div>

</div>
</div>

<% include ../partials/footer %>
